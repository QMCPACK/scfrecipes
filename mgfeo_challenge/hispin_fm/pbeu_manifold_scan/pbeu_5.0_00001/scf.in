&CONTROL
   calculation     = 'scf'
   disk_io         = 'low'
   outdir          = 'pwscf_output'
   prefix          = 'pwscf'
   pseudo_dir      = '../../../pseudos'
   tprnfor         = .true.
   tstress         = .true.
   wf_collect      = .true.
   verbosity       = 'high'
/

&SYSTEM
   nosym                         = .false.
   ibrav                         = 1  
   celldm(1)                     = 7.957594704448392
   degauss                       = 0.0019
   ecutwfc                       = 800
   ecutrho                       = 3200
   input_dft                     = 'pbe'
   nat                           = 8
   nbnd                          = 32
   nspin                         = 2                !spin on
   ntyp                          = 3
   occupations                   = 'smearing'
   smearing                      = 'fermi-dirac'
   tot_charge                    = 0
   tot_magnetization             = 4                ! fm	
   lda_plus_u                    = .true.
   lda_plus_u_kind               = 0
   Hubbard_U(1)                  = 5.0
   starting_ns_eigenvalue(1,1,1) = 1.0              ! (d state, spin up or down, atom)
   starting_ns_eigenvalue(2,1,1) = 1.0
   starting_ns_eigenvalue(3,1,1) = 1.0
   starting_ns_eigenvalue(4,1,1) = 1.0
   starting_ns_eigenvalue(5,1,1) = 1.0
   starting_ns_eigenvalue(1,2,1) = 0.0
   starting_ns_eigenvalue(2,2,1) = 0.0
   starting_ns_eigenvalue(3,2,1) = 0.0
   starting_ns_eigenvalue(4,2,1) = 0.0
   starting_ns_eigenvalue(5,2,1) = 1.0
/

&ELECTRONS
   conv_thr         = 1e-10
   diagonalization  = 'david'
   electron_maxstep = 100
   mixing_beta      = 0.3
   mixing_fixed_ns  = 100                           ! Enforce constant d-manifold
/

