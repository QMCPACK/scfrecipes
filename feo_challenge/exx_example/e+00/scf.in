&CONTROL
   calculation     = 'scf'
   disk_io         = 'low'
   outdir          = 'pwscf_output'
   prefix          = 'pwscf'
   pseudo_dir      = '../'
   tprnfor         = .false.
   tstress         = .false.
   wf_collect      = .true.
   verbosity       = 'high'
/

&SYSTEM
   celldm(1)       = 1.0
   degauss         = 0.001
   ecutwfc         = 300
   ibrav           = 0
   !input_dft       = 'hf+noc'
   input_dft       = 'pbe0'
   nat             = 4
   nbnd            = 32
   noinv           = .false.
   nosym           = .false.
   nosym_evc       = .false.
   nspin           = 2
   ntyp            = 3
   nr1             = 100
   nr2             = 100
   nr3             = 100
   occupations     = 'smearing'
   smearing        = 'fermi-dirac'
   starting_magnetization(1) = -0.5
   starting_magnetization(2) =  0.5
   tot_charge      = 0
   tot_magnetization = 0
/

&ELECTRONS
   conv_thr         = 1e-09
   diagonalization  = 'david'
   electron_maxstep = 100
   mixing_mode      = 'local-TF'
   mixing_beta      = 0.15
/

